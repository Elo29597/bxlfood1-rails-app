<p>Edit restaurant's information</p>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :localisation %>
  <%= f.text_field :localisation %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :style %>
  <%= f.text_field :style %>
  <%= f.input :photo, as: :file %>

  <%= f.submit %>
<% end %>
